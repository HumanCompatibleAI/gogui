#!/bin/sh

GOGUI_LIB=`dirname $0`/../lib
JAVA_DEFAULT=java

if test -z "$JAVA_HOME"; then
  JAVA=$JAVA_DEFAULT
else
  JAVA=$JAVA_HOME/bin/java
fi

MAC_DEFINES="\
  -Dapple.awt.brushMetalLook=true \
  -Dcom.apple.mrj.application.apple.menu.about.name=GoGui \
"

$JAVA $MAC_DEFINES -jar $GOGUI_LIB/gogui.jar "$@"
