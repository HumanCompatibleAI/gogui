#!/bin/sh

JAVA_DEFAULT=java
GOGUI_LIB=`dirname "$0"`/../lib
if [[ $OSTYPE == "cygwin" ]]; then
    GOGUI_LIB=`cygpath -w "$GOGUI_LIB"`
fi
if [ -z "$GOGUI_JAVA_HOME" ]; then
    JAVA="$JAVA_DEFAULT"
else
    JAVA="$GOGUI_JAVA_HOME/bin/java"
fi
if [[ "$GOGUI_ENABLE_ASSERTIONS" == "1" ]]; then
    OPTIONS="-ea"
fi

# Add -Dgnu.io.rxtx.SerialPorts=... for ports with rxtx
# -noverify avoids a problem with rxtx 2.05/2.16
# (Illegal use of nonvirtual function call)
"$JAVA" $OPTIONS -jar "$GOGUI_LIB/gmptogtp.jar" "$@"
